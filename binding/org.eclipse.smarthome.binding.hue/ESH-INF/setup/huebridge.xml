<?xml version="1.0" encoding="UTF-8"?>

<setup-flow:setup-flow id="hue-bridge" bindingId="hue"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:setup-flow="http://eclipse.org/smarthome/schemas/config/setup-flow/v0.0.1"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/config/setup-flow/v0.0.1 org.eclipse.smarthome.config.setup.schema.xsd">

    <thing-types>
        <thing-type>hue:bridge</thing-type>
    </thing-types>

    <steps>
        <configuration-step id="ipConfiguration">
            <implementation class="org.eclipse.smarthome.binding.hue.internal.setup.IpConfigurationSetupStepHandler" />
            <properties>
                <property name="ip" />
            </properties>
        </configuration-step>

        <external-event-step id="pairing">
            <implementation class="org.eclipse.smarthome.binding.hue.internal.setup.PairingSetupStepHandler" />
            <timeout>180</timeout>
        </external-event-step>
    </steps>

</setup-flow:setup-flow>
